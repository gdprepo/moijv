{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Profil {% endblock %}


{% block body %}
<section class="row my-4 mb-3">

    <div class="col-3">
        <img class="img-fluid" src="{{ user.avatar ? asset(user.avatar) : 'http://placehold.it/300x300' }}" alt="Avatar">
    </div>
    <div class="col-6">
        <a class="btn btn-success" href="{{ path('profile_upd') }}">Modifier Profile</a>
        <a class="btn btn-info" href="">Modifier Mot de Passe</a>
    </div>
    <div class="col-9">
        <h2>{{ user.firstname }}{{ user.lastname }} </h2> 
        <p>Inscrit le {{ user.dateInscription | date('d/m/Y') }}</p>
        {% if (user.description) %}
            <p>Description : {{ user.description }}</p>
        {% endif %}

    </div>

</section>

<section>
    <ul>
        {% for game in user.games %}
            <li><a href="{{ path('game_details', { id: game.id}) }}">{{ game.name }}</a></li>
        {% endfor %}
    </ul>
</section>

{% endblock %}
